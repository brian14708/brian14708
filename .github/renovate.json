{
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "devDependencies",
        "lockFileMaintenance"
      ],
      "groupName": "minor updates",
      "automerge": true
    }
  ],
  "automergeType": "branch"
}
