---
import Layout from "../layouts/Layout.astro";
import { EMAIL } from "../consts";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const formatDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
---

<Layout>
  <main class="mx-auto max-w-2xl px-6 py-24 lg:px-8 lg:py-32">
    {/* Hero */}
    <section>
      <div class="mb-8 flex items-center gap-6">
        <div
          class="relative h-20 w-20 shrink-0 overflow-hidden rounded-full ring-2 ring-stone-200 dark:ring-stone-700"
        >
          <img
            src="https://www.gravatar.com/avatar/ee8f84b4a2d0f873801cd60b4ced1a37cff97adbc6e1f66ac4ade2785fe9b39c?s=256"
            alt=""
            class="h-full w-full object-cover"
            loading="eager"
          />
        </div>
        <div>
          <h1
            class="bg-gradient-to-br from-stone-900 to-stone-600 bg-clip-text text-5xl font-bold tracking-tight text-transparent dark:from-stone-100 dark:to-stone-400"
          >
            Brian Li
          </h1>
          <p class="mt-1 text-lg text-stone-500 dark:text-stone-400">
            brian14708 · Software Engineer
          </p>
        </div>
      </div>

      <p
        class="max-w-lg text-xl leading-relaxed text-stone-700 dark:text-stone-300"
      >
        Building reliable systems and tools. Interested in how software is
        designed, deployed, and maintained at scale.
      </p>

      <div class="mt-6 flex flex-wrap gap-5">
        <a
          href="https://github.com/brian14708"
          class="group flex items-center gap-2 text-sm text-stone-600 transition-colors duration-300 hover:text-stone-900 dark:text-stone-400 dark:hover:text-stone-200"
        >
          <svg
            class="h-4 w-4"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          GitHub
        </a>
        <a
          href={`mailto:${EMAIL}`}
          class="group flex items-center gap-2 text-sm text-stone-600 transition-colors duration-300 hover:text-stone-900 dark:text-stone-400 dark:hover:text-stone-200"
        >
          <svg
            class="h-4 w-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
          Email
        </a>
      </div>
    </section>

    {/* Latest Posts */}
    <section class="mt-16">
      <div class="mb-6 flex items-baseline justify-between">
        <h2
          class="text-xs font-medium tracking-[0.2em] text-stone-400 uppercase dark:text-stone-500"
        >
          Latest Writing
        </h2>
        <a
          href="/posts/"
          class="text-xs text-stone-500 transition-colors duration-300 hover:text-stone-900 dark:text-stone-400 dark:hover:text-stone-200"
        >
          View all →
        </a>
      </div>

      {
        posts.length > 0 ? (
          <ul class="space-y-4">
            {posts.map((post) => (
              <li>
                <a
                  href={`/posts/${post.id.replace(/\.md$/, "")}/`}
                  class="group -mx-3 block rounded-lg px-3 py-3 transition-all duration-300 hover:bg-stone-100/50 dark:hover:bg-stone-800/30"
                >
                  <div class="flex items-baseline justify-between gap-4">
                    <h3 class="font-medium text-stone-900 transition-colors duration-300 group-hover:text-stone-600 dark:text-stone-100 dark:group-hover:text-stone-300">
                      {post.data.title}
                    </h3>
                    <time class="shrink-0 text-xs text-stone-400 tabular-nums dark:text-stone-500">
                      {formatDate(post.data.date)}
                    </time>
                  </div>
                  {post.data.description && (
                    <p class="mt-1 line-clamp-1 text-sm text-stone-500 dark:text-stone-400">
                      {post.data.description}
                    </p>
                  )}
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-sm text-stone-500 dark:text-stone-400">
            No posts yet.
          </p>
        )
      }
    </section>

    {/* Focus Areas */}
    <section class="mt-16">
      <h2
        class="mb-6 text-xs font-medium tracking-[0.2em] text-stone-400 uppercase dark:text-stone-500"
      >
        Exploring
      </h2>
      <div class="flex flex-wrap gap-3">
        {
          [
            "Systems Programming",
            "Cloud Infrastructure",
            "Developer Tools",
            "Nix / NixOS",
            "AI Agents",
            "Open Source",
          ].map((item) => (
            <span class="rounded-full border border-stone-200 bg-stone-100 px-3 py-1.5 text-sm text-stone-600 dark:border-stone-700/50 dark:bg-stone-800/50 dark:text-stone-400">
              {item}
            </span>
          ))
        }
      </div>
    </section>

    {/* h-card for IndieWeb */}
    <section class="h-card hidden" aria-hidden>
      <ul>
        <li class="p-name">
          <span class="p-given-name">Brian</span>
          <span class="p-family-name">Li</span>
        </li>
        <li>
          <a class="p-nickname u-url" rel="me" href="https://brian14708.dev"
            >brian14708</a
          >
        </li>
        <li>
          <a class="u-url" rel="me" href="https://github.com/brian14708"
            >GitHub</a
          >
        </li>
        <li>
          <a
            rel="pgpkey"
            class="u-key"
            href="/.well-known/openpgpkey/hu/s8y7oh5xrdpu9psba3i5ntk64ohouhga"
            type="text/plain">PGP Key</a
          >
        </li>
        <li>
          <a class="u-key" href="/ssh-key" type="text/plain">SSH Key</a>
        </li>
      </ul>
      <data
        class="u-logo"
        value="https://www.gravatar.com/avatar/ee8f84b4a2d0f873801cd60b4ced1a37cff97adbc6e1f66ac4ade2785fe9b39c?s=256"
      ></data>
    </section>
  </main>
</Layout>
