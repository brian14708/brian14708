---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props as CollectionEntry<"posts">;
const { Content } = await post.render();
---

<Layout {...post.data}>
  <div class="py-16">
    <article class="px-6 lg:px-8">
      <div class="mx-auto max-w-prose">
        <h1
          class="mt-2 block text-center text-3xl font-bold leading-8 tracking-tight sm:text-4xl"
        >
          {post.data.title}
        </h1>
      </div>
      <div class="prose prose-lg mx-auto mt-6 dark:prose-invert">
        <Content />
      </div>
    </article>
  </div>
</Layout>
